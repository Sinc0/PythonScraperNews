#:kivy 2.0.0

<StartingScreen>:
    bl1: testBoxLayout

    GridLayout:
        cols: 2
        rows: 1
        spacing: 1

        ScrollView:
            id: svScrollBar2
            do_scroll_x: False
            do_scroll_y: True
            effect_cls: 'ScrollEffect'
            size_hint_x: None
            width: 100
            
            BoxLayout:
                id: testBoxLayout
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: 1

        ScrollView:
            id: svScrollBar
            effect_cls: 'ScrollEffect'
            
            BoxLayout:
                id: boxLayoutPost
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 10
                padding: 10

<AddProfileScreen>:
    bl2: testBoxLayout
    ti1: profileName
    ti2: profileYoutube
    ti3: profileTwitter
    
    GridLayout:
        cols: 2
        rows: 1

        ScrollView:
            id: svScrollBar2
            do_scroll_x: False
            do_scroll_y: True
            effect_cls: 'ScrollEffect'
            size_hint_x: None
            width: 100

            BoxLayout:
                id: testBoxLayout
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                Button:
                    size_hint_y: None
                    text: "<"
                    on_press: root.manager.current = 'start'
                    font_size: 30
                    disabled: False

        StackLayout:
            id: testStackLayout1
            size_hint_y: 1
            Label:
                size_hint_y: None
                size_hint_x: 1
                height: 40
                text: "Add Profile"
            TextInput:
                id: profileName
                size_hint_y: None
                size_hint_x: 1
                height: 40
                font_size: 20
                hint_text: "name"
                halign: "center"
            TextInput:
                id: profileYoutube
                size_hint_y: None
                size_hint_x: 1
                height: 40
                font_size: 20
                hint_text: "youtube channel"
                halign: "center"
            TextInput:
                id: profileTwitter
                size_hint_y: None
                size_hint_x: 1
                height: 40
                font_size: 20
                hint_text: "twitter username"
                halign: "center"
            Button:
                size_hint_y: None
                size_hint_x: 1
                height: 40
                text: "Confirm Add"
                background_color: 'lightgreen'
                on_press: root.fetch_profile_inputs()

<EditProfileScreen>:
    bl2: testBoxLayout
    bl3: testBoxLayout2
    st1: testStackLayout1
    ti1: profileName
    
    GridLayout:
        cols: 2
        rows: 1

        ScrollView:
            id: svScrollBar1
            do_scroll_x: False
            do_scroll_y: True
            effect_cls: 'ScrollEffect'
            size_hint_x: None
            width: 100

            BoxLayout:
                id: testBoxLayout
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height

                Button:
                    size_hint_y: None
                    text: "<"
                    on_press: root.manager.current = 'start'
                    font_size: 30
                    disabled: False

        StackLayout:
            id: testStackLayout1
            size_hint_y: 1

            Label:
                size_hint_y: None
                size_hint_x: 1
                height: 40
                text: "Delete Profile"
            TextInput:
                id: profileName
                size_hint_y: None
                size_hint_x: 1
                height: 40
                font_size: 20
                hint_text: "name"
                halign: "center"
                disabled: True

            Label:
                size_hint_y: None
                size_hint_x: 1
                height: 40
                text: "All Profiles"

            ScrollView:
                id: svScrollBar2
                do_scroll_x: False
                do_scroll_y: True
                effect_cls: 'ScrollEffect'
                size_hint_y: None
                size_hint_x: 1
                height: 440

                BoxLayout:
                    id: testBoxLayout2
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height

            Button:
                size_hint_y: None
                size_hint_x: 1
                height: 40
                background_color: 'red'
                text: "Confirm Delete"
                on_press: root.DeleteProfile()

